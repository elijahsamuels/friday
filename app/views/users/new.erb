<form action='/signup' method='POST'>
<h1>Sign up create your user account.</h1>
    
<br>
<br>

    <label for="first_name">First Name: </label>
    <input id="user_first_name" type="text" name="user[first_name]">
    <br>
    <label for="last_name">Last Name: </label>
    <input id="user_last_name" type="text" name="user[last_name]">
    <br>
    <label for="email">Email: </label>
    <input id="user_email" type="text" name="user[email]">
    <br>
    <label for="password">Password: </label>
    <input id="user_password" type="password" name="user[password]">
    <br>

    <input type="submit" value="Sign Up">
</form>


