    <title>Friday - Appt. booking assistant</title>
  </head>

  <body>

    <div class="wrapper">
<%# START NAV %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

    <%# <a href="/">Main</a>  %>
    <% if !logged_in? %>
    <form action='/' method='get'>
        <button type="submit" class="btn btn-light btn-sm ">Main</button>
    </form>
    <br>

    <% end %>
    
    <% if logged_in? %>
      <%# <a href="/clients/new">New Client</a> &bull; %>
      <%# <a href="/users/new">New User</a> &bull; %>
      <%# &bull; <a href="/meetings">All Meetings</a> %>
      <%# &bull; <a href="/meetings/new">New Meeting</a> %>
      <%# &bull; <a href="/logout"> Log Out </a> %>

      <form action='/meetings' method='get'>
          <button type="submit" class="btn btn-light btn-sm">All Meetings</button>
      </form>
      <br>

      <form action='/meetings/new' method='get'>
          <button type="submit" class="btn btn-light btn-sm">New Meeting</button>
      </form>
      <br>

      <form action='/logout' method='get'>
          <button type="submit" class="btn btn-light btn-sm">Log Out</button>
      </form>
      <br>

      &bull; Date/Time: <span id="datetime"></span>
      <script>
      var dt = new Date();
      document.getElementById("datetime").innerHTML=dt.toLocaleString();
      </script>    
      </p>
    <% end %>

    <% flash.keys.each do |type| %>
      <div data-alert class="flash <%= type %> alert-box radius">
      <%= flash[type] %>
      <a href="#" class="close">&times;</a>
      </div>
    <% end %>

      <%# binding.pry %>
    <% flash.keys.each do |name, msg|%>
      <div class="alert alert-<%= name %>">
        <%= msg %>
      </div>
    <% end %>
      </ul>
    </div>
  </div>
</nav>
<%# END NAV %>











