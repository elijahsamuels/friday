<%# table body iterating through all the meetings %>
<%# might be nice to make each of these a link to the individual meeting %>

<tbody>
  <% @meeting.each.with_index(1) do |m, i| %>
    <tr>
      <td><%= i %>. </td>
      <td><%= m.user.namejoin %></td>
      <td><%= m.client_name%></td>
      <td><%= m.user_name %></td>
      <td><%= m.meeting_date.strftime("%A, %B %d, %Y") %></td>
      <td><%= m.meeting_time.strftime("%I:%M%P") %></td> 
    <% end %>

